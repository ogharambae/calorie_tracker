<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context=".MealDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mealDetail_fragment_meal_details"
            android:layout_width="231dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/hello_blank_fragment"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_meal_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_meal_detail"
            android:textColor="#212121" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/carb_mealDetails"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/textview_border"
            android:text="@string/textview_cal"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/primaryColor" />

        <TextView
            android:id="@+id/protein_mealDetails"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="@string/textview_carbs"
            android:textAlignment="center"
            android:textColor="@color/primaryColor" />

        <TextView
            android:id="@+id/calories_mealDetails"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="@string/textview_fat"
            android:textAlignment="center"
            android:textColor="@color/primaryColor" />

        <TextView
            android:id="@+id/fat_mealDetails"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="@string/textview_protein"
            android:textAlignment="center"
            android:textColor="@color/primaryColor" />
    </LinearLayout>

</LinearLayout>